  gem 'shoulda'
  gem 'rspec-rails'
  gem 'factory_girl_rails'
  gem 'capybara'
  gem 'simplecov'
  gem 'awesome_print'

  # guard
  gem 'guard'
  gem 'guard-rspec'
  gem 'rb-fsevent' # for better file-change detection
  gem 'ruby_gntp' # for growl
end
